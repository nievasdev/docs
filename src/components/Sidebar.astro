                {menu.children.map((child) => {
                  const isChildActive = menuContainsCurrentPath(child, currentPath);

                  if (child.children) {
                    /* Es una subcarpeta con m치s contenido */
                    return (
                      <div class="menu-subcategory">
                        <div
