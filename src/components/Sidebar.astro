        {menu.children ? (
          /* Es una carpeta con subcategor칤as */
          <>
            <div
              class:list={['menu-title', 'category-title', { active: isMenuActive }]}
              data-menu={generateMenuId(menu)}
            >
              {formatFolderName(menu.name)}
