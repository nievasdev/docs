---
import'../styles/global.css';
export interface Props{title:string;description?:string}
const{title,description="Technical Documentation"}=Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <script is:inline>
function playTerminalSound(){const a=new(window.AudioContext||window.webkitAudioContext)(),b=a.createOscillator(),c=a.createGain();b.connect(c);c.connect(a.destination);b.frequency.value=2e3;b.type='sine';c.gain.setValueAtTime(0,a.currentTime);c.gain.linearRampToValueAtTime(.18,a.currentTime+.003);c.gain.linearRampToValueAtTime(0,a.currentTime+.035);b.start(a.currentTime);b.stop(a.currentTime+.035);const d=a.createOscillator(),e=a.createGain();d.connect(e);e.connect(a.destination);d.frequency.value=1400;d.type='sine';e.gain.setValueAtTime(0,a.currentTime+.012);e.gain.linearRampToValueAtTime(.12,a.currentTime+.018);e.gain.linearRampToValueAtTime(0,a.currentTime+.045);d.start(a.currentTime+.012);d.stop(a.currentTime+.045)}window.playTerminalSound=playTerminalSound;
    </script>
  </body>
</html>
